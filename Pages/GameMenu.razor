@page "/games"
@inject NavigationManager navManager;
@inject IJSRuntime JS

<section class="games-section pt-100 pb-150" style="margin-left: 110px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div id="carouselPanelControls" class="carousel" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href="#" @onclick="@(e=>OnClickNavGame("mole"))">
                                <img src="images/games/thum1.png" class="d-block w-100" alt="mole">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="#" @onclick="@(e=>OnClickNavGame("drum"))">
                                <img src="images/games/thum2.png" class="d-block w-100" alt="drum">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="#" @onclick="@(e=>OnClickNavGame("balloon"))">
                                <img src="images/games/thum3.png" class="d-block w-100" alt="mole">
                            </a>
                        </div>        
                                   
                    </div>
                    <!--<button class="carousel-control-prev" type="button" data-bs-target="#carouselPanelControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselPanelControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>-->
                </div>
            </div>
        </div>
    </div>
</section>


@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {        
        if (firstRender)
        {            
            await JS.InvokeAsync<IJSObjectReference>("import", "/js/carousel-slider.js");                                
        }
    }   

    private void OnClickNavGame(string? navId)
    {
        if(navId != null)
            navManager.NavigateTo("/games/" + navId, true);
        else
            navManager.NavigateTo("/games/", true);
    }
}

